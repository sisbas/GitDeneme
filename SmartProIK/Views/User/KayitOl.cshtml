<!-- Modal -->
<div class="modal fade mj_popupdesign" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel"> Ş<span>İrket</span> H<span>esabı</span></h4>

            </div>
            <div class="modal-body">
                <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1">
                    <div class="row">
                        <div class="mj_pricingtable mj_yellowtable mj_createaccount_form_wrapper">
                            <!-- Nav tabs -->
                            @*<span style="text-align:center;margin-top:20px;" class="active">Company</span>*@

                            @*<p class="mj_toppadder40">You can also sign up with <a href="#">Facebook</a>, <a href="#">Linkedin</a>, or <a href="#">Google</a>.</p>*@
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane fade in active" id="company">
                                    @using (Html.BeginForm("KayitOl", "User"))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="mj_createaccount_form">
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.ad, new { @class = "form-control", @placeholder = "İsim"})
                                                @Html.ValidationMessageFor(model => model.ad, "", new { @class = "text-danger" })
                                                
                                            </div>
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.soyad, new { @class = "form-control", @placeholder = "Soyisim" })
                                                @Html.ValidationMessageFor(model => model.soyad, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.kullaniciAdi, new { @class = "form-control", @placeholder = "Kullanıcı Adı" })
                                                @Html.ValidationMessageFor(model => model.kullaniciAdi, "", new { @class = "text-danger" })
                                            </div>
                                                @Html.Partial("_partialpageemail")
                                            <div class="form-group">
                                                @Html.PasswordFor(m => m.sifre, new { @class = "form-control", @placeholder = "Şifre" })
                                                @Html.ValidationMessageFor(model => model.sifre, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.sirketAdi, new { @class = "form-control", @placeholder = "Şirket Adı" })
                                                @Html.ValidationMessageFor(model => model.sirketAdi, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.telefon, new { @class = "form-control", @placeholder = "Telefon" })
                                                @Html.ValidationMessageFor(model => model.telefon, "", new { @class = "text-danger" })
                                            </div>

                                        </div>

                                        <input type="submit" class="mj_pricing_footer" value="Şimdi Kayıt Ol" />

                                    }
                                </div>
