                                            </div>
                                            <div class="mj_pricing_footer">
                                                <a href="#">Get Started Now!</a>
                                            </div>
                                        </form>
                                    </div>*@
                            </div>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <img src="~/Contents/img/close.png" alt="" />
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade mj_popupdesign" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1"> Ö<span>ğrencİ </span>H<span>esabı</span></h4>

            </div>
            <div class="modal-body">
                <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1">
                    <div class="row">
                        <div class="mj_pricingtable mj_bluetable mj_freelancer_form_wrapper">

                            @using (Html.BeginForm("kayitOl", "User"))
                            {
                                @Html.AntiForgeryToken()
                                <div class="mj_freelancer_form">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.ad, new { @class = "form-control", @placeholder = "İsim" })
                                        @Html.ValidationMessageFor(model => model.ad, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.soyad, new { @class = "form-control", @placeholder = "Soyisim" }) 
                                        @Html.ValidationMessageFor(model => model.soyad, "", new { @class = "text-danger" })                                       
                                    </div>
                                        @Html.Partial("_partialpageemail")
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.kullaniciAdi, new { @class = "form-control", @placeholder = "Kullanıcı Adı", @id = "user_soyad" })
                                        @Html.ValidationMessageFor(m=>m.kullaniciAdi, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.sifre, new { @class = "form-control", @placeholder = "Şifre" })
                                        @Html.ValidationMessageFor(model => model.sifre, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.sinifPortalNumarasi, new { @class = "form-control", @placeholder = "Portal Numarası" })
                                        @Html.ValidationMessageFor(model => model.sinifPortalNumarasi, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.telefon, new { @class = "form-control", @placeholder = "Telefon" })
                                        @Html.ValidationMessageFor(model => model.telefon, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <input type="submit" class="mj_pricing_footer" value="Şimdi Kayıt Ol" />
                            }

                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <img src="~/Contents/img/close.png" alt="">
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





























